pipeline {
    agent any
    tools {
        maven 'jenkins-maven'
    }

    stages {
        stage('Build') {
            steps {
                dir('Saathi-Backend') {
                    sh 'mvn -DskipTests clean package'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}